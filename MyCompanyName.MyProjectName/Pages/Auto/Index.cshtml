@page
@model MyCompanyName.MyProjectName.Web.Pages.Auto.IndexModel

@{
  ViewData["Title"] = "Gestión de Autos";
}

@section styles {
  <abp-style src="/Pages/Auto/Index.cshtml.css" />
}

<abp-card>
  <abp-card-header>
    <abp-card-title>Autos</abp-card-title>
  </abp-card-header>
  <abp-card-body>
    <form id="NewAutoForm" class="form-inline mb-3">
      <input id="NewAutoMarca"
             type="text"
             class="form-control mr-2"
             placeholder="Marca" />
      <input id="NewAutoModelo"
             type="text"
             class="form-control mr-2"
             placeholder="Modelo" />
      <input id="NewAutoColor"
             type="text"
             class="form-control mr-2"
             placeholder="Color" />
      <input id="NewAutoAño"
             type="number"
             class="form-control mr-2"
             placeholder="Año" />
      <button id="AddAutoBtn"
              type="button"
              class="btn btn-primary">
        Agregar Auto
      </button>
    </form>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Color</th>
          <th>Año</th>
          <th style="width: 120px;">Acciones</th>
        </tr>
      </thead>
      <tbody id="AutoTableBody">
        @* Opcional: si deseas precargar la tabla en el servidor *@
        @* @foreach (var auto in Model.AutoItems) { … } *@
      </tbody>
    </table>
  </abp-card-body>
</abp-card>

<!-- Modal para editar un Auto -->
<div class="modal fade" id="modalEditarAuto" tabindex="-1" role="dialog" aria-labelledby="modalEditarAutoLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditarAutoLabel">Editar Auto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="FormEditarAuto">
          <!-- Campo oculto para almacenar el ID del auto que estamos editando -->
          <input type="hidden" id="EditarAutoId" />

          <div class="form-group">
            <label for="EditarAutoMarca">Marca</label>
            <input type="text" class="form-control" id="EditarAutoMarca" name="marca" />
          </div>
          <div class="form-group">
            <label for="EditarAutoModelo">Modelo</label>
            <input type="text" class="form-control" id="EditarAutoModelo" name="modelo" />
          </div>
          <div class="form-group">
            <label for="EditarAutoColor">Color</label>
            <input type="text" class="form-control" id="EditarAutoColor" name="color" />
          </div>
          <div class="form-group">
            <label for="EditarAutoAño">Año</label>
            <input type="number" class="form-control" id="EditarAutoAño" name="anio" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" id="GuardarCambiosAuto">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>


@section scripts {
  <abp-script src="/Pages/Auto/Index.cshtml.js" />
}
